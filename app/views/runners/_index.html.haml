%table{class: "table table-striped table-bordered table-hover"}
  %thead
    %tr{class: "table-primary"}
      %th Name
      %th Surname
      %th Date of Birth
      %th Category
      %th Club
      %th Gender
      %th{ colspan: "3"}Actions
  %tbody
    - runners.each do |runner|
      %tr
        %td= runner.name
        %td= runner.surname
        %td= runner.dob
        %td= runner.category.name
        %td= link_to runner.club.name, club_path(runner.club)
        %td= runner.gender
        = render partial: '/layouts/actions', :locals => { :element => runner }
